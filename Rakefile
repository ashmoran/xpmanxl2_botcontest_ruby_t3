desc "Release"
task :release do
  system "chmod -R 777 /Volumes/xpman/ruby_t3"
  system "rm -rf /Volumes/xpman/ruby_t3"
  system "chmod -R 777 /Volumes/xpman/ruby_t3"  
  system "cp -R . /Volumes/xpman/ruby_t3"
end

desc "Manual release"
task :manual_release do
  system "rm -rf '/Volumes/NO NAME/ruby_t3'"
  system "cp -R . '/Volumes/NO NAME/ruby_t3'"
end